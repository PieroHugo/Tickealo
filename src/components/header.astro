---
import Button from "./button.astro"
---

<header>
  <nav>
    <a href="/">
      <div class="logo-container">
        <img class="icon" src="/icon.png" alt="Tickealo Logo" />
        <h1 class="title">Tickealo</h1>
      </div>
    </a>
      
    <button class="menu-toggle" id="menuToggle" aria-label="Abrir menú">☰</button>

    <div class="nav-links" id="navLinks">
      <Button url='/register'>Regístrate</Button>
      <Button url='/login'>Ingresa</Button>
    </div>
  </nav>
</header>

<style>
  a{
    text-decoration: none;
    color: inherit;
  }
  header {
    background-color: var(--primary-color);
    padding: 20px;
    color: var(--text-white);
  }

  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
  }

  .logo-container {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .icon {
    width: 48px;
    height: 48px;
  }

  .title {
    font-size: 1.5rem;
    font-weight: bold;
    margin: 0;
  }

  .nav-links {
    display: flex;
    gap: 16px;
  }

  .menu-toggle {
    display: none;
    background: none;
    border: none;
    font-size: 2rem;
    color: white;
    cursor: pointer;
  }

  @media (max-width: 768px) {
    .menu-toggle {
      display: block;
    }

    .nav-links {
      flex-direction: column;
      position: absolute;
      top: 70px;
      right: 0;
      background-color: var(--primary-color, #1e40af);
      padding: 20px;
      border-radius: 0 0 0 8px;
      display: none;
      box-shadow: -2px 4px 8px rgba(0,0,0,0.2);
    }

    .nav-links.open {
      display: flex;
    }
  }
</style>

<script type="module">
  const toggle = document.getElementById("menuToggle");
  const links = document.getElementById("navLinks");

  toggle.addEventListener("click", () => {
    links.classList.toggle("open");
  });
</script>
